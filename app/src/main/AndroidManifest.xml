<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.scorradi.cv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CvApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:fullBackupOnly="false"
        android:icon="@mipmap/ic_profile"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_profile_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.CV"
        tools:targetApi="n">
        <activity android:name=".views.splash.SplashActivity" android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" android:exported="true"/>

                <category android:name="android.intent.category.LAUNCHER" android:exported="false"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.main.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>